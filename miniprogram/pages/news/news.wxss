
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.container-content {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 30rpx 0rpx;
}

.title{
  margin-left: 20rpx;
  font-size: 40rpx;
  color: #000000;
    overflow:hidden;
  text-overflow:ellipsis;
  word-wrap: break-word;
  display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;
margin: 10rpx 10rpx;
width:550rpx;
}
.content {
  display: flex;
  flex-direction: column;
  margin-right:10rpx;
  margin-top: 10rpx;
  width:500rpx;
}

.content-scroll {
  display: flex;
  flex-direction: row;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.content-img {
  width: 100%;
  height: 70px;
  background-color: #b2b2b2;
}
.addition{
  font-size:25rpx;
  color:#b2b2b2;
  margin: 5rpx 20rpx 20rpx 0rpx;
  display: flex;
  flex-direction: row-reverse;
}

