.page{
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;

}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.head{
  font-size: 50rpx;
  padding:40rpx 20rpx;
  font-weight: 1000;
}

.content {
  display: flex;
  flex-direction: column;
  margin-bottom:150rpx;
}
.text{
  width:90%;
  margin-left: 5%;
}
.content-scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content-text {
  font-size: 18px;
  color: #666;
  margin-left: 10px;
}

.content-img {
  width: 100%;
  min-height: 100px;
  margin-left: 0rpx;
  background-color: #999;
}

.line {
  width: 100%;
  height: 1px;
  margin-top: 20px;
  background-color: #ccc;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  z-index: -99;
}
