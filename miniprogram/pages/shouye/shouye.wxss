/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.swiper {
  width: 100%;
  height: 70%;
  animation: show 2.5s cubic-bezier(0.19, 1, 0.22, 1) 0.5s forwards;
  opacity: 0;
  background-color: white;
}
.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 300rpx;
}
.remind-img {
  width: 250rpx;
  height: 250rpx;
  padding-bottom: 25rpx;
}
.swiperIMG {
  width: 100%;
  height: 650rpx;
}
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
}

/**菜单列表**/

.chooseMenu {
  width:95%;
  height: 25%;
  display: flex;
  flex-wrap: wrap;
  opacity: 0;
  animation: bd-rise 2s cubic-bezier(0.23, 1, 0.32, 1) 0.75s forwards;
background-color: white;
justify-content: center;
margin-left: 20rpx;

}

.menuItem {
  justify-content: center;
  align-items: center;
  width: 150rpx;
  display: flex;
  height: 150rpx;
}
.item {
  width: 80%;
  height: 100%;
  margin-top: 10%;
}
.items {
  width: 80%;
  height: 100%;
  margin-top: -50%;
}

.itemIcon {
  width: 80rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
  height: 80rpx;
}

.itemTitle {
  display: block;
  color: #424141;
  font-size: 26rpx;
  margin-top: 5rpx;
  text-align: center;
}
.integralTips{
    display: flex;
    align-items: center;
    justify-content: center;
}
.integralTipsIcon{
    margin-top:12px;
    width: 26rpx;
    height: 26rpx;
    margin-left: 20rpx;
    animation: showIntegralTipsIcon 3s;
    animation-iteration-count: infinite;
    -webkit-animation: showIntegralTipsIcon 3s;
    -webkit-animation-iteration-count: infinite;
}
.hover {
  opacity: 0.9;
  transform: scale(0.9, 0.9);
}
.tuxiang{
  margin-top:20px;
  margin-bottom: -20px;
  width: 20%;
}
.swiper_container {
  height: 50rpx;
  width: 90%;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 1px;
  color: #576b95;
  animation: show 2.5s cubic-bezier(0.19, 1, 0.22, 1) 0.5s forwards;
  margin-top: 10rpx;
}