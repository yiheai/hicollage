/* pages/welcome/welcome.wxss */

/**start.wxss**/

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  background-color: #b0cef0;
  height: 100%;
}
.title {
 margin:40rpx 0 0 20rpx;
  animation: show 2.5s cubic-bezier(0.19, 1, 0.22, 1) 0.5s forwards;
}
.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
 background-color: white;
}




@keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 0.95;
  }
}

.hd {
 display: flex;
flex-direction: row;
align-items: stretch;
opacity: 0;
height: 100rpx;
border-bottom: 1rpx solid rgb(248, 245, 245);
animation: bd-rise 2s cubic-bezier(0.23, 1, 0.32, 1) 0.75s forwards;
margin: 0 0 0 30rpx;
}

.user-photo{
width: 120rpx;
height: 120rpx;
opacity: 0.95;
border-radius: 160rpx;
margin: 20rpx 0 0 60rpx;
}
.bd {
 display: flex;
flex-direction: row;
align-items: stretch;
animation: bd-rise 2s cubic-bezier(0.23, 1, 0.32, 1) 0.75s forwards;
opacity: 0;
height: 200rpx;
border-bottom: 20rpx solid rgb(248, 245, 245);
}

@keyframes bd-rise {
  from {
    opacity: 0;
    transform: translate3d(0, 60rpx, 0);
  }

  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #2dc799;
  color: #fff;
  text-align: center;
  border-radius: 100rpx;
  margin: 40% 20%;
}

.confirm-btn text {
  color: #999;
  font-size: 35rpx;
}


.ex{
width:100%;
display:flex;
align-items: center;
flex-direction: column;
margin-top: 80rpx;
}
.extype{
 margin-top: 20rpx;
display: flex;
justify-content: center;
width: 30%;
padding: 20rpx;
border-radius: 20rpx 30rpx;
align-items: center;
background-color: #b0cef0;
height: 50rpx;
font-size: 35rpx;

}
.lotype{
  color:black;
  display:flex;
 justify-content: center;
 height:15%;
 padding:20rpx;
  border-radius: 20rpx;
  align-content:center;
 border: 3rpx solid #000 ;
 width: 60%;
}
.login{
  width:30%;
display:flex;
justify-content: center;
margin-top: 60rpx;
}